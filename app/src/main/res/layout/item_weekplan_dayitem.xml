<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="163dp"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_weekplan_ll_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/xtbf_btn_h"
            android:orientation="horizontal">

            <!--周几-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/xtbf_btn_h"
                android:layout_weight="2"
                android:clickable="false">

                <TextView
                    android:id="@+id/item_weekplan_tv_weekday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="周日"
                    android:textSize="18sp"/>

            </RelativeLayout>

            <!--时间-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/xtbf_btn_h"
                android:layout_weight="3"
                android:clickable="false">

                <TextView
                    android:id="@+id/item_weekplan_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="2018-03-13"
                    android:textSize="18sp"/>

            </RelativeLayout>

            <!--未稽查-->
            <RelativeLayout
                android:id="@+id/item_weekplan_rl_statue"
                android:layout_width="0dp"
                android:layout_height="@dimen/xtbf_btn_h"
                android:layout_weight="2"
                android:clickable="false">

                <TextView
                    android:id="@+id/item_weekplan_tv_statue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="未制定"
                    android:textSize="15sp"/>

            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:orientation="horizontal">

            <!--追溯区域:-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/xtbf_btn_h"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/item_weekplan_tv_area01"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="追溯区域:"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/item_weekplan_tv_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="3dp"
                    android:layout_toRightOf="@id/item_weekplan_tv_area01"
                    android:ellipsize="end"
                    android:maxLines="1"
                    />

            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:orientation="horizontal">

            <!--追溯路线 -->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/xtbf_btn_h"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/item_weekplan_tv_route01"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="追溯路线:"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/item_weekplan_tv_route"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="3dp"
                    android:layout_toRightOf="@id/item_weekplan_tv_route01"
                    android:ellipsize="end"
                    android:maxLines="1"
                    />

            </RelativeLayout>

        </LinearLayout>

        <!--追溯项-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:orientation="horizontal">

            <!--追溯项 -->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/xtbf_btn_h"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/item_weekplan_tv_check01"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="追溯项:"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/item_weekplan_tv_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="3dp"
                    android:layout_toRightOf="@id/item_weekplan_tv_check01"
                    android:ellipsize="end"
                    android:maxLines="1"
                    />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
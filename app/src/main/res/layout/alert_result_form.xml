<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <!-- 取消 -->
        <RelativeLayout
            android:id="@+id/top_navigation_rl_back1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:background="@drawable/bt_return">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/top_navigation_bt_back1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="30dp"
                android:background="@drawable/icon_return"
                android:textSize="@dimen/font_size3"/>
        </RelativeLayout>

        <!-- 标题 -->

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:background="@color/white">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/top_navigation_tv_title1"
                style="@style/banner_child"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:maxLength="15"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="选择结果"
                android:textColor="@color/gray_color_333333"
                android:textSize="@dimen/font_size2"/>
        </RelativeLayout>

        <!-- 确定 -->

        <RelativeLayout
            android:id="@+id/top_navigation_rl_confirm1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:background="@drawable/bt_return"
            android:visibility="visible">

            <!-- 删除Button按钮,因为这个按钮会有点击事件  使用TextView没有点击事件 -->
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/top_navigation_bt_confirm1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:text="确定"
                android:textSize="@dimen/font_size3"
                />
        </RelativeLayout>
    </LinearLayout>

    <RadioGroup
        android:id="@+id/result_right_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/result_right_rb"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="@dimen/font_size3"
            android:text="正确"/>

    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/black"
        />


    <CheckBox
        android:id="@+id/result_cb1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="@dimen/font_size3"
        android:text="品项有误"
        android:visibility="gone"/>

    <CheckBox
        android:id="@+id/result_cb2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="@dimen/font_size3"
        android:text="经销商有误"
        android:visibility="gone"/>

    <CheckBox
        android:id="@+id/result_cb3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="@dimen/font_size3"
        android:text="数据有误"
        android:visibility="gone"/>

    <CheckBox
        android:id="@+id/result_cb4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="@dimen/font_size3"
        android:text="窜货"
        android:visibility="gone"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/listview_bg_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
              android:background="@color/bg_app"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/listview_bg_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:background="@color/bg_app"
        android:orientation="vertical" >

        <!-- 点击快速采集 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical" >

            <ImageView
                style="@style/point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ico_point" />

            <TextView
                android:id="@+id/xtbf_quicklydialog_tv_itemname"
                style="@style/page_label_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/checkindex_checkcollect" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/listview_line" />

        <ListView
            android:id="@+id/xtbf_quicklydialog_lv_pro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:divider="@color/listview_line"
            android:dividerHeight="1dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/listview_line" />
    </LinearLayout>


</LinearLayout>
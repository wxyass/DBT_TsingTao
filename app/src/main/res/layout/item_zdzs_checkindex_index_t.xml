<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    >

    <!-- 2级条目 -->
    <LinearLayout
        style="@style/item_xtbf_checkindex_rl"
        android:orientation="horizontal">

        <!--产品名称-->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/zs_item_h"
            android:layout_weight="7">


            <TextView
                android:id="@+id/item_zs_checkindex_proname"
                style="@style/ddzs_checkindex_pro_tv"
                android:text="产品名称"/>

        </RelativeLayout>


        <TextView
            android:id="@+id/item_zs_checkindex_indexvalue"
            android:gravity="center_vertical|left"
            android:layout_width="0dp"
            android:layout_height="@dimen/xtbf_item_h"
            android:layout_weight="2"
            android:textSize="@dimen/font_size3"
            android:text="有效铺货"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:background="@color/gray"/>
        <!--未稽查-->
        <RelativeLayout
            android:id="@+id/item_zs_checkindex_t_rl_statue"
            android:layout_width="0dp"
            android:layout_height="@dimen/xtbf_btn_h"
            android:layout_weight="3">

            <TextView
                android:id="@+id/item_zs_checkindex_t_tv_statue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="未稽查"
                android:textSize="@dimen/font_size3"/>

            <ImageView
                style="@style/xtbf_sayhi_third_tv"
                android:visibility="visible"/>
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
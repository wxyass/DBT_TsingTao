<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="131dp"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_askgoods_ll"
        android:layout_width="match_parent"
        android:layout_height="131dp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_height_size10"
            >

            <TextView
                android:id="@+id/item_askgoods_tv_proname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="崂山啤酒8度500*12罐啤"
                android:textColor="@color/gray_color_333333"
                android:textSize="@dimen/font_size4"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/gray_color_cccccc"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_height_size06"
            >

            <TextView
                android:id="@+id/item_askgoods_tv_agencyname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="北京青岛啤酒北方销售有限公司"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_size6"/>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_height_size10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/width_height_size10"
                android:layout_gravity="center_vertical"
                android:layout_weight="4">

                <TextView
                    android:id="@+id/item_askgoods_tv_qudao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="渠道价:"
                    android:textColor="@color/gray_color_666666"
                    android:textSize="@dimen/font_size6"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/width_height_size10"
                android:layout_gravity="center_vertical"
                android:layout_weight="9">

                <EditText
                    android:id="@+id/item_askgoods_et_qudao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center_horizontal"
                    android:hint="@string/default_input"
                    android:inputType="numberDecimal"
                    android:layout_centerVertical="true"
                    android:maxLength="10"
                    android:textColor="@color/gray_color_333333"
                    android:textColorHint="@color/gray_color_cccccc"
                    android:textSize="@dimen/font_size2"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/width_height_size10"
                android:layout_gravity="center_vertical"
                android:layout_weight="4">

                <TextView
                    android:id="@+id/item_askgoods_tv_lingshou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:layout_marginLeft="15dp"
                    android:text="零售价:"
                    android:textColor="@color/gray_color_666666"
                    android:textSize="@dimen/font_size6"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/width_height_size10"
                android:layout_gravity="center_vertical"
                android:layout_weight="9">

                <EditText
                    android:id="@+id/item_askgoods_et_lingshou"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center_horizontal"
                    android:hint="@string/default_input"
                    android:inputType="numberDecimal"
                    android:layout_centerVertical="true"
                    android:maxLength="10"
                    android:textColor="@color/gray_color_333333"
                    android:textColorHint="@color/gray_color_cccccc"
                    android:textSize="@dimen/font_size2"/>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="181dp"
              android:background="@color/white"
              android:orientation="vertical">

    <!--产品名称-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_height_size10">

        <TextView
            android:id="@+id/item_checkgoods_tv_proname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="崂山啤酒8度500*12罐啤"
            android:textColor="@color/gray_color_333333"
            android:textSize="@dimen/font_size4"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/gray_color_cccccc"/>

    <!--经销商名称-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_height_size06">

        <TextView
            android:id="@+id/item_checkgoods_tv_agencyname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="北京青岛啤酒北方销售有限公司"
            android:textColor="@color/gray"
            android:textSize="@dimen/font_size6"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_height_size10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!--上次库存-->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/width_height_size10"
            android:layout_gravity="center_vertical"
            android:layout_weight="4">

            <TextView
                android:id="@+id/item_checkgoods_tv_prevstore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="上次库存:"
                android:textColor="@color/gray_color_666666"
                android:textSize="@dimen/font_size6"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/width_height_size10"
            android:layout_gravity="center_vertical"
            android:layout_weight="9">

            <TextView
                android:id="@+id/item_checkgoods_et_prevstore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@null"
                android:gravity="center_horizontal"
                android:hint="@string/default_input"
                android:inputType="numberDecimal"
                android:maxLength="10"
                android:textColor="@color/gray_color_333333"
                android:textColorHint="@color/gray_color_cccccc"
                android:textSize="@dimen/font_size2"/>

        </RelativeLayout>

        <!--日销量-->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/width_height_size10"
            android:layout_gravity="center_vertical"
            android:layout_weight="4">

            <TextView
                android:id="@+id/item_checkgoods_tv_daysellnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="日销量:"
                android:textColor="@color/gray_color_666666"
                android:textSize="@dimen/font_size6"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/width_height_size10"
            android:layout_gravity="center_vertical"
            android:layout_weight="9">

            <EditText
                android:id="@+id/item_checkgoods_et_daysellnum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@null"
                android:gravity="center_horizontal"
                android:hint="@string/default_input"
                android:inputType="numberDecimal"
                android:maxLength="10"
                android:textColor="@color/gray_color_333333"
                android:textColorHint="@color/gray_color_cccccc"
                android:textSize="@dimen/font_size2"/>
        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_height_size10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/width_height_size10"
            android:layout_gravity="center_vertical"
            android:layout_weight="4">

            <TextView
                android:id="@+id/item_checkgoods_tv_prevnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="订单量:"
                android:textColor="@color/gray_color_666666"
                android:textSize="@dimen/font_size6"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/width_height_size10"
            android:layout_gravity="center_vertical"
            android:layout_weight="9">

            <EditText
                android:id="@+id/item_checkgoods_et_prevnum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center_horizontal"
                android:hint="@string/default_input"
                android:inputType="numberDecimal"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:maxLength="10"
                android:textColor="@color/gray_color_333333"
                android:textColorHint="@color/gray_color_cccccc"
                android:textSize="@dimen/font_size2"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/width_height_size10"
            android:layout_gravity="center_vertical"
            android:layout_weight="4">

            <TextView
                android:id="@+id/item_askgoods_tv_addcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:text="累计卡:"
                android:textColor="@color/gray_color_666666"
                android:textSize="@dimen/font_size6"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/width_height_size10"
            android:layout_gravity="center_vertical"
            android:layout_weight="9">

            <EditText
                android:id="@+id/item_askgoods_et_addcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center_horizontal"
                android:hint="@string/default_input"
                android:inputType="numberDecimal"
                android:layout_centerVertical="true"
                android:maxLength="10"
                android:textColor="@color/gray_color_333333"
                android:textColorHint="@color/gray_color_cccccc"
                android:textSize="@dimen/font_size2"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
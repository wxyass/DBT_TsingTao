                <!--未稽查-->
                <TextView
                    android:id="@+id/zdzs_agree_rl_contact_statue"
                    style="@style/zdzs_sayhi_statue"
                    android:visibility="invisible"
                    android:text="未稽查"/>

                <ImageView
                    style="@style/xtbf_sayhi_third_tv"
                    />
            </RelativeLayout>

            <!-- 联系电话 -->
            <RelativeLayout
                android:id="@+id/zdzs_agree_rl_mobile"
                android:visibility="visible"
                style="@style/xtbf_sayhi_rl_all">

                <!--标题-->
                <TextView
                    style="@style/zdzs_sayhi_title"
                    android:text="联系电话"/>

                <!--内容1-->
                <TextView
                    android:id="@+id/zdzs_agree_rl_mobile_con1"
                    style="@style/zdzs_sayhi_content1"
                    android:text=""/>

                <!--内容2-->
                <TextView
                    android:id="@+id/zdzs_agree_rl_mobile_con2"
                    style="@style/zdzs_sayhi_content2"
                    android:text=""/>

                <!--未稽查-->
                <TextView
                    android:id="@+id/zdzs_agree_rl_mobile_statue"
                    style="@style/zdzs_sayhi_statue"
                    android:visibility="invisible"
                    android:text="未稽查"/>

                <ImageView
                    style="@style/xtbf_sayhi_third_tv"
                    />
            </RelativeLayout>

            <!-- 主要条款 -->
            <RelativeLayout
                android:id="@+id/zdzs_agree_rl_notes"
                android:visibility="visible"
                style="@style/xtbf_sayhi_rl_all">

                <!--标题-->
                <TextView
                    style="@style/zdzs_sayhi_title"
                    android:text="主要条款"/>

                <!--内容1-->
                <TextView
                    android:id="@+id/zdzs_agree_rl_notes_con1"
                    style="@style/zdzs_sayhi_content1"
                    android:text=""/>

                <!--内容2-->
                <TextView
                    android:id="@+id/zdzs_agree_rl_notes_con2"
                    style="@style/zdzs_sayhi_content2"
                    android:text=""/>

                <!--未稽查-->
                <TextView
                    android:id="@+id/zdzs_agree_rl_notes_statue"
                    style="@style/zdzs_sayhi_statue"
                    android:text="未稽查"/>

                <ImageView
                    style="@style/xtbf_sayhi_third_tv"
                    android:visibility="visible"/>
            </RelativeLayout>

            <!--兑付信息-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical">

                <ImageView
                    style="@style/point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ico_point"/>

                <TextView
                    style="@style/page_label_big"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="兑付信息"/>
            </LinearLayout>

            <!--终端进货台账列表-->
            <ListView
                android:id="@+id/zdzs_invoicing_lv_tz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:divider="@null"
                android:dividerHeight="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
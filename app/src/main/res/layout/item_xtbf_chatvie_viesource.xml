<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:cuisw="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xtbf_btn_h"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/xtbf_btn_h"
            android:layout_weight="1">

            <TextView
                android:id="@+id/item_viesource_tv_proname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:textSize="18sp"
                android:text="崂山啤酒8度500*12罐啤"/>

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/gray"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/xtbf_btn_h"
            android:layout_weight="1">

            <TextView
                android:id="@+id/item_viesource_tv_agencyname"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:textSize="15sp"
                android:text="供应商:"/>

            <EditText
                android:id="@+id/item_viesource_et_agencyname"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_toRightOf="@id/item_viesource_tv_agencyname"
                android:background="@drawable/bg_visit_record"/>
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xtbf_btn_h"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/xtbf_btn_h"
            android:layout_weight="1">

            <TextView
                android:id="@+id/item_viesource_tv_qudao"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:textSize="18sp"
                android:text="渠道价:"/>

            <EditText
                android:id="@+id/item_viesource_et_qudao"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:inputType="numberDecimal"
                android:layout_toRightOf="@id/item_viesource_tv_qudao"
                android:background="@drawable/bg_visit_record"/>

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/gray"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/xtbf_btn_h"
            android:layout_weight="1">

            <TextView
                android:id="@+id/item_viesource_tv_lingshou"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:textSize="15sp"
                android:text="零售价:"/>

            <EditText
                android:id="@+id/item_viesource_et_lingshou"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:inputType="numberDecimal"
                android:layout_toRightOf="@id/item_viesource_tv_lingshou"
                android:background="@drawable/bg_visit_record"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_app"
              android:orientation="vertical">

    <include layout="@layout/top_navigation"/>

    <ScrollView
        android:id="@+id/sayhi_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <!--整改计划-->
            <LinearLayout
                android:id="@+id/dd_operation_btn_zhenggai"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    >

                    <ImageView
                        android:id="@+id/dd_visit_img01"
                        style="@style/app_icon_style"
                        android:background="@drawable/icon_operation_zhenggaiplan"/>

                    <TextView
                        style="@style/app_text_style"
                        android:text="@string/operation_zhenggai"
                        />

                </RelativeLayout>

                <!--整改计划 第二列-->
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    >


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        >

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        >

                        <TextView
                            android:id="@+id/dd_operation_btn_zhenggai_current"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="近七日待复查计划: "
                            android:textColor="@color/gray"
                            android:textSize="@dimen/font_size6"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="4dp"
                            android:layout_toRightOf="@id/dd_operation_btn_zhenggai_current"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="--"
                            android:textColor="@color/gray_color_333333"
                            android:textSize="@dimen/font_size6"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="16dp"
                        >

                        <TextView
                            android:id="@+id/dd_operation_btn_zhenggai_plan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="最近复查计划: "
                            android:textColor="@color/gray"
                            android:textSize="@dimen/font_size6"/>

                        <TextView
                            android:id="@+id/dd_operation_btn_zhenggai_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="4dp"
                            android:layout_toRightOf="@id/dd_operation_btn_zhenggai_plan"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="--"
                            android:textColor="@color/gray_color_333333"
                            android:textSize="@dimen/font_size6"/>
                    </RelativeLayout>
                </RelativeLayout>

                <!--整改计划 第三列-->
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingBottom="15dp"
                        android:paddingLeft="0dp"
                        android:paddingRight="15dp"
                        android:paddingTop="15dp">

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/dd_operation_btn_zhenggai_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="4dp"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="--"
                            android:textColor="@color/holo_orange_dark"
                            android:textSize="@dimen/font_size6"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="6dp"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="个"
                            android:textColor="@color/holo_blue_dark"
                            android:textSize="@dimen/font_size6"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="16dp"
                        >

                        <TextView
                            android:id="@+id/dd_operation_btn_zhenggai_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="4dp"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="--"
                            android:textColor="@color/gray_color_333333"
                            android:textSize="@dimen/font_size6"/>
                    </RelativeLayout>

                </RelativeLayout>
            </LinearLayout>


            <!--日工作记录及总结-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <!--日工作记录及总结-->
                <RelativeLayout
                    android:id="@+id/dd_operation_btn_summer"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/bg_select_white_gray"
                    >

                    <ImageView
                        android:id="@+id/dd_visit_img03"
                        style="@style/app_icon_style"
                        android:background="@drawable/icon_operation_record"/>

                    <TextView
                        style="@style/app_text_style"
                        android:text="@string/operation_weeksummer"
                        />
                </RelativeLayout>

                <!--周工作计划-->
                <RelativeLayout
                    android:id="@+id/dd_operation_btn_plan"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/bg_select_white_gray"
                    >

                    <ImageView
                        android:id="@+id/dd_visit_img04"
                        style="@style/app_icon_style"
                        android:background="@drawable/icon_operation_plan"/>

                    <TextView
                        style="@style/app_text_style"
                        android:text="@string/operation_weekjihua"
                        />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>

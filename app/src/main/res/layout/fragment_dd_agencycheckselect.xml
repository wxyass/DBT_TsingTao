<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_app"
              android:orientation="vertical">

    <include layout="@layout/top_navigation"/>

    <!-- 下拉菜单 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical">

        <dd.tsingtaopad.core.view.dropdownmenu.DropdownButton
            android:id="@+id/agency_check_ddb_area"
            android:layout_width="0px"
            android:layout_height="45dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <!--终端列表-->
    <LinearLayout
        android:id="@+id/agency_check_ll_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/listview_line"
        android:orientation="vertical"
        >

        <ListView
            android:id="@+id/agency_check_select_lv_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="@color/bg_lv_item"
            android:divider="@color/listview_line"
            android:dividerHeight="1dp">
        </ListView>
    </LinearLayout>

</LinearLayout>

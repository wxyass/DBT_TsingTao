<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/listview_bg_item"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_app"
              android:orientation="vertical" >


    <!--铺货状态-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical">

        <ImageView
            style="@style/point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ico_point"/>

        <TextView
            style="@style/page_label_big"
            android:id="@+id/item_xt_caculate_tv_indexvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="冰冻化"/>
    </LinearLayout>


    <et.tsingtaopad.view.NoScrollListView
        android:id="@+id/item_xt_caculate_lv_indexvalue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/listview_line"
        android:dividerHeight="1dp" />





</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="152dp"
              android:background="@color/white"
              android:orientation="vertical">

    <!--竞品名称-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_height_size10"
        >

        <TextView
            android:id="@+id/item_viestatus_tv_proname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="崂山啤酒8度500*12罐啤"
            android:textColor="@color/gray_color_333333"
            android:textSize="@dimen/font_size4"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/gray_color_cccccc"/>

    <!--月销量  库存-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_height_size10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/width_height_size10"
            android:layout_gravity="center_vertical"
            android:layout_weight="4">

            <TextView
                android:id="@+id/item_viestatus_tv_monthsell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="月销量:"
                android:textColor="@color/gray_color_666666"
                android:textSize="@dimen/font_size6"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/width_height_size10"
            android:layout_gravity="center_vertical"
            android:layout_weight="9">

            <EditText
                android:id="@+id/item_viestatus_et_monthsell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@null"
                android:gravity="center_horizontal"
                android:hint="@string/default_input"
                android:inputType="numberDecimal"
                android:maxLength="10"
                android:textColor="@color/gray_color_333333"
                android:textColorHint="@color/gray_color_cccccc"
                android:textSize="@dimen/font_size2"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/width_height_size10"
            android:layout_gravity="center_vertical"
            android:layout_weight="4">

            <TextView
                android:id="@+id/item_viestatus_tv_currstore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="库存:"
                android:textColor="@color/gray_color_666666"
                android:textSize="@dimen/font_size6"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/width_height_size10"
            android:layout_gravity="center_vertical"
            android:layout_weight="9">

            <EditText
                android:id="@+id/item_viestatus_et_currstore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@null"
                android:gravity="center_horizontal"
                android:hint="@string/default_input"
                android:inputType="numberDecimal"
                android:maxLength="10"
                android:textColor="@color/gray_color_333333"
                android:textColorHint="@color/gray_color_cccccc"
                android:textSize="@dimen/font_size2"/>
        </RelativeLayout>

    </LinearLayout>

    <!--竞品描述-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_height_size10"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_height_size10"
            android:layout_weight="1"
            >

            <EditText
                android:id="@+id/item_viestatus_et_describe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:ellipsize="end"
                android:hint="请输入竞品描述"
                android:singleLine="true"
                android:textColor="@color/gray_color_333333"
                android:textColorHint="@color/gray_color_cccccc"
                android:textSize="@dimen/font_size4"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
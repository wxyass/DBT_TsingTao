<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="122dp"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_agency_check_content_ll_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_height_size08"
            android:orientation="horizontal">

            <!--产品名称-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_height_size08"
                >

                <TextView
                    android:id="@+id/item_agency_check_content_tv_proname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="崂山啤酒8度500*12罐啤"
                    android:textColor="@color/gray_color_333333"
                    android:textSize="@dimen/font_size4"/>

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/list_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_height_size08"
            android:orientation="horizontal">

            <!--产品编码-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_height_size08"
                >

                <TextView
                    android:id="@+id/item_agency_check_content_tv_agencyname1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="产品编码"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/font_size6"/>

                <TextView
                    android:id="@+id/item_agency_check_content_tv_agencyname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@id/item_agency_check_content_tv_agencyname1"
                    android:text="S948569325237982357932"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/font_size6"/>

            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/width_height_size10"
                android:layout_gravity="center_vertical"
                android:layout_weight="4">

                <TextView
                    android:id="@+id/item_agency_check_content_tv_prevstore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="期末库存:"
                    android:textColor="@color/gray_color_666666"
                    android:textSize="@dimen/font_size6"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/width_height_size10"
                android:layout_gravity="center_vertical"
                android:layout_weight="9">

                <TextView
                    android:id="@+id/item_agency_check_content_et_prevstore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:gravity="center_horizontal"
                    android:hint="@string/default_input"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:maxLength="10"
                    android:textColor="@color/gray_color_333333"
                    android:textColorHint="@color/gray_color_cccccc"
                    android:textSize="@dimen/font_size2"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/width_height_size10"
                android:layout_gravity="center_vertical"
                android:layout_weight="4">

                <TextView
                    android:id="@+id/item_agency_check_content_tv_daysellnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="实际库存:"
                    android:textColor="@color/gray_color_666666"
                    android:textSize="@dimen/font_size6"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/width_height_size10"
                android:layout_gravity="center_vertical"
                android:layout_weight="9">

                <EditText
                    android:id="@+id/item_agency_check_content_et_daysellnum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:gravity="center_horizontal"
                    android:hint="@string/default_input"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:maxLength="10"
                    android:textColor="@color/gray_color_333333"
                    android:textColorHint="@color/gray_color_cccccc"
                    android:textSize="@dimen/font_size2"/>
            </RelativeLayout>

        </LinearLayout>

        <!--请输入备注信息(偏差原因等)-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_height_size08"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_height_size08"
                android:layout_weight="1"
                >

                <EditText
                    android:id="@+id/item_agency_check_content_et_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@null"
                    android:ellipsize="end"
                    android:hint="请输入备注信息(偏差原因等)"
                    android:singleLine="true"
                    android:textColor="@color/gray_color_333333"
                    android:textColorHint="@color/gray_color_cccccc"
                    android:textSize="@dimen/font_size4"/>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
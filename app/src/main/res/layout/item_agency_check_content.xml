<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="122dp"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_agency_check_content_ll_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/xtbf_btn_h"
            android:orientation="horizontal">

            <!--产品名称-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/xtbf_btn_h"
                android:layout_weight="8">

                <TextView
                    android:id="@+id/item_agency_check_content_tv_proname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="崂山啤酒8度500*12罐啤"
                    android:textSize="18sp"/>

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/xtbf_btn_h"
            android:orientation="horizontal">

            <!--产品编码-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/xtbf_btn_h"
                >

                <TextView
                    android:id="@+id/item_agency_check_content_tv_agencyname1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="产品编码: "
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/item_agency_check_content_tv_agencyname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/item_agency_check_content_tv_agencyname1"
                    android:layout_marginLeft="15dp"
                    android:text="S948569325237982357932"
                    android:textSize="18sp"/>

            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--期末库存:-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/xtbf_btn_h"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/item_agency_check_content_tv_prevstore"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="期末库存:"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/item_agency_check_content_et_prevstore"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="3dp"
                    android:layout_toRightOf="@id/item_agency_check_content_tv_prevstore"
                    />

            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/gray"/>
            <!--实际库存:-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/xtbf_btn_h"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/item_agency_check_content_tv_daysellnum"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="实际库存:"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/item_agency_check_content_et_daysellnum"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="3dp"
                    android:layout_toRightOf="@id/item_agency_check_content_tv_daysellnum"
                    android:inputType="number"/>
            </RelativeLayout>

        </LinearLayout>

        <!--竞品描述-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/xtbf_btn_h"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/xtbf_btn_h"
                android:layout_weight="1"
                >

                <EditText
                    android:id="@+id/item_agency_check_content_et_des"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:hint="请输入竞品描述"
                    android:background="@drawable/bg_visit_record"/>

            </RelativeLayout>



        </LinearLayout>


    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/listview_bg_item"
              android:layout_width="match_parent"
              android:layout_height="150dp"
              android:background="@color/bg_app"
              android:orientation="vertical">

    <!--采集项-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            style="@style/point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ico_point"/>

        <TextView
            android:id="@+id/item_xt_calculatedialog_tv_itemname"
            style="@style/page_label_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="库存"/>
    </LinearLayout>


    <!--现有量-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/item_xt_calculatedialog_tv_xy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:paddingRight="10dp"
            android:text="现有量:"
            android:textSize="@dimen/font_size3"/>

        <EditText
            android:id="@+id/item_xt_calculatedialog_et_finalnum"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/item_xt_calculatedialog_tv_xy"
            android:background="@drawable/bg_visit_record"
            android:ems="10"
            android:hint="请输入现有量数值"
            android:inputType="numberSigned"
            android:maxLength="8"
            android:singleLine="true"
            android:textSize="@dimen/font_size4"/>
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/listview_line"/>

    <!--变化量-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/item_xt_calculatedialog_tv_bh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:paddingRight="10dp"
            android:text="变化量:"
            android:textSize="@dimen/font_size3"/>

        <EditText
            android:id="@+id/item_xt_calculatedialog_et_changenum"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/item_xt_calculatedialog_tv_bh"
            android:background="@drawable/bg_visit_record"
            android:ems="10"
            android:hint="请输入变化量数值"
            android:inputType="numberSigned"
            android:maxLength="8"
            android:singleLine="true"
            android:textSize="@dimen/font_size4"/>
    </RelativeLayout>


</LinearLayout>
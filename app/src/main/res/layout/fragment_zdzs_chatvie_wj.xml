<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_app"
              android:clickable="true"
              android:orientation="vertical">

    <include layout="@layout/top_navigation"/>


    <LinearLayout
        style="@style/content_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:orientation="vertical">

        <!--业代数据-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <ImageView
                style="@style/point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ico_point"/>

            <TextView
                style="@style/page_label_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="业代数据"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <!-- 业代数据： -->
        <RelativeLayout
            android:id="@+id/zdzs_chatvie_wj_amend_rl"
            style="@style/xtbf_sayhi_rl">

            <!--标题-->
            <TextView
                android:id="@+id/zdzs_chatvie_wj_amend_rl_yd_title"
                style="@style/zdzs_sayhi_title"
                android:text="@string/termadd_termname"/>

            <!--内容1-->
            <TextView
                android:id="@+id/zdzs_chatvie_wj_amend_rl_con1"
                style="@style/zdzs_sayhi_content1"
                android:text=""/>

            <!--内容2-->
            <TextView
                android:id="@+id/zdzs_chatvie_wj_amend_rl_con2"
                style="@style/zdzs_sayhi_content2"
                android:text=""/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <!--督导备注-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                style="@style/point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ico_point"/>

            <TextView
                style="@style/page_label_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="督导备注"/>
        </LinearLayout>


        <!--拜访记录输入框-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/zdzs_chatvie_wj_amend_dd_et_report"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_visit_record"
                android:hint="请输入备注内容"
                android:maxLength="150"
                android:inputType="textMultiLine"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <!--下一步-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/zdzs_chatvie_wj_amend_dd_bt_save"
                style="@style/xtbf_btn_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_height_size08"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_select_green"
                android:text="保存"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>


</LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="122dp"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_zs_chatvie_ll_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/xtbf_btn_h"
            android:orientation="horizontal">

            <!--产品名称-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/xtbf_btn_h"
                android:layout_weight="8">

                <TextView
                    android:id="@+id/item_zs_chatvie_tv_proname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="崂山啤酒8度500*12罐啤"
                    android:textSize="18sp"/>

            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/gray"/>
            <!--未稽查-->
            <RelativeLayout
                android:id="@+id/item_zs_chatvie_Rl_statue"
                android:layout_width="0dp"
                android:layout_height="@dimen/xtbf_btn_h"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/item_zs_chatvie_tv_statue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="未稽查"
                    android:textSize="15sp"/>

                <ImageView
                    style="@style/xtbf_sayhi_third_tv"
                    android:visibility="visible"/>
            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/xtbf_btn_h"
            android:orientation="horizontal">

            <!--经销商-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/xtbf_btn_h"
                >

                <TextView
                    android:id="@+id/item_zs_chatvie_tv_agencyname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="经销商"
                    android:textSize="18sp"/>

            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--渠道价:-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/xtbf_btn_h"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/item_zs_chatvie_tv_prevstore"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="渠道价:"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/item_zs_chatvie_et_prevstore"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_toRightOf="@id/item_zs_chatvie_tv_prevstore"
                    android:background="@drawable/bg_visit_record"/>

            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/gray"/>
            <!--零售价:-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/xtbf_btn_h"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/item_zs_chatvie_tv_daysellnum"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="零售价:"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/item_zs_chatvie_et_daysellnum"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_toRightOf="@id/item_zs_chatvie_tv_daysellnum"
                    android:background="@drawable/bg_visit_record"
                    android:inputType="number"/>
            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--销量-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/xtbf_btn_h"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/item_zs_chatvie_tv_prevnum"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="销量:"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/item_zs_chatvie_et_prevnum"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_toRightOf="@id/item_zs_chatvie_tv_prevnum"
                    android:background="@drawable/bg_visit_record"
                    android:inputType="number"/>

            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/gray"/>

            <!--当前库存-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/xtbf_btn_h"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/item_zs_chatvie_tv_addcard"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="当前库存:"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/item_zs_chatvie_et_addcard"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_toRightOf="@id/item_zs_chatvie_tv_addcard"
                    android:background="@drawable/bg_visit_record"
                    android:inputType="number"/>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_app"
              android:orientation="vertical">

    <include layout="@layout/top_navigation"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <!--品种有误-->
            <LinearLayout
                style="@style/content_margin"
                android:id="@+id/zdzs_agreedetail_amend_rl_ll_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        style="@style/point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/ico_point"/>

                    <TextView
                        style="@style/page_label_big"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="品种有误: "/>
                    <TextView
                        android:id="@+id/zdzs_agreedetail_amend_tv_product"
                        style="@style/page_label_big"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>


                <!--品种有误输入框-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@color/white"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/zdzs_agreedetail_amend_dd_et_product"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/bg_visit_record"
                        android:hint="请输入正确品种信息"
                        android:inputType="textMultiLine"
                        android:maxLength="150"/>
                </LinearLayout>
            </LinearLayout>

            <!--实际数量有误-->
            <LinearLayout
                style="@style/content_margin"
                android:id="@+id/zdzs_agreedetail_amend_rl_ll_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical">

                    <ImageView
                        style="@style/point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/ico_point"/>

                    <TextView
                        style="@style/page_label_big"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="实际数量有误: "/>
                    <TextView
                        android:id="@+id/zdzs_agreedetail_amend_tv_num"
                        style="@style/page_label_big"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <!--实际数量输入框-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@color/white"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/zdzs_agreedetail_amend_dd_et_num"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/bg_visit_record"
                        android:hint="请输入正确数量信息"
                        android:inputType="number"
                        android:maxLength="150"/>
                </LinearLayout>
            </LinearLayout>

            <!--承担金额有误-->
            <LinearLayout
                style="@style/content_margin"
                android:id="@+id/zdzs_agreedetail_amend_rl_ll_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical">

                    <ImageView
                        style="@style/point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/ico_point"/>

                    <TextView
                        style="@style/page_label_big"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="承担金额有误: "/>
                    <TextView
                        android:id="@+id/zdzs_agreedetail_amend_tv_price"
                        style="@style/page_label_big"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <!--承担金额输入框-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@color/white"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/zdzs_agreedetail_amend_dd_et_price"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/bg_visit_record"
                        android:hint="请输入正确金额信息"
                        android:inputType="number"
                        android:maxLength="150"/>
                </LinearLayout>
            </LinearLayout>

            <!--督导备注-->
            <LinearLayout
                style="@style/content_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--督导备注-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/ico_point"/>

                    <TextView
                        style="@style/page_label_big"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="督导备注"/>
                </LinearLayout>


                <!--拜访记录输入框-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/white"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/zdzs_agreedetail_amend_dd_et_report"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/bg_visit_record"
                        android:hint="请输入备注内容"
                        android:inputType="textMultiLine"
                        android:maxLength="150"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>

                <!--下一步-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/zdzs_agreedetail_amend_dd_bt_save"
                        style="@style/xtbf_btn_tv"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/width_height_size08"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/bg_select_green"
                        android:text="保存"
                        />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="80dp"/>
            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</LinearLayout>
